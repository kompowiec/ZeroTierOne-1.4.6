start_zt() {
  if [ -x /usr/sbin/zerotier-cli ]; then
    echo "Starting zerotier daemon:  /usr/sbin/zerotier-cli "
    /usr/sbin/zerotier-cli -d 2> /dev/null
  fi
}

stop_zt() {
  killall zerotier-cli 2> /dev/null
}

restart_zt() {
  stop_zt
  sleep 1
  start_zt
}

case "$1" in
'start')
 start_zt
  ;;
'stop')
  stop_zt
  ;;
'restart')
 restart_zt
  ;;
*)
  echo "usage $0 start|stop|restart"
esac
